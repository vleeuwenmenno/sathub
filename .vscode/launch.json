  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch SatHub Client",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/client",
      "cwd": "${workspaceFolder}/client",
      "args": ["--insecure"],
      "env": {
        "STATION_TOKEN": "044617fba4826abbc26dedd4d2bc09a8",
        "API_URL": "https://api.sathub.local:9999",
        "WATCH_PATHS": "./data",
        "PROCESSED_DIR": "./data/processed",
        "LOG_LEVEL": "info",
        "RETRY_COUNT": "3",
        "RETRY_DELAY": "5",
        "PROCESS_DELAY": "60",
        "HEALTH_CHECK_INTERVAL": "60"
      }
    }
  ]
}
